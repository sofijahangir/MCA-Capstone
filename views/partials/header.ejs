<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Forum</title>
  <meta name="keywords" content="HTML5 Template">
  <meta name="description" content="Forum - Responsive HTML5 Template">
  <meta name="author" content="Forum">
  <link rel="shortcut icon" href="favicon/favicon.ico">
  <meta name="format-detection" content="telephone=no">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="/css/style.css" rel="stylesheet" type="text/css">
  <%- include('./css/style'); %>
</head>
<body>
  <!-- tt-mobile menu -->
  <nav class="panel-menu" id="mobile-menu">
    <ul>

    </ul>
    <div class="mm-navbtn-names">
      <div class="mm-closebtn">
        Close
        <div class="tt-icon">
          <svg>
            <use xlink:href="#icon-cancel"></use>
          </svg>
        </div>
      </div>
      <div class="mm-backbtn">Back</div>
    </div>
  </nav>
  <header id="tt-header">
    <div class="container">
      <div class="row tt-row no-gutters">
        <div class="col-auto">
          <!-- toggle mobile menu -->
          <a class="toggle-mobile-menu" href="#">
            <svg class="tt-icon">
              <use xlink:href="#icon-menu_icon"></use>
            </svg>
          </a>
          <!-- /toggle mobile menu -->
          <!-- logo -->
          <div class="tt-logo tt-desktop-menu" style="width: 600; ">
            <a href="/"><img
                src="https://img.icons8.com/external-inipagistudio-mixed-inipagistudio/344/external-forum-business-mentoring-inipagistudio-mixed-inipagistudio.png"
                alt="Logo" height="42" width="60"></a>

            <!-- <a href="/"><span>Forum</span></a> -->
          </div>
          <!-- /logo -->
          <!-- desctop menu -->
          <div class="tt-desktop-menu">
            <nav>
              <ul>
                <li><a href="/post/new"><span>New Post</span></a></li>

                <!-- The logged in user is admin -->
                <% if (user) { %>

                  <% if ((user.isAdmin) || (user.isFaculty)) { %>
                    <li><a href="/event/new"><span>New Event</span></a></li>
                    <% } %>


                      <% } %>

              </ul>
            </nav>
          </div>
          <!-- /desctop menu -->
          <!-- tt-search -->
          <div class="tt-search">
            <!-- toggle -->
            <button class="tt-search-toggle" data-toggle="modal" data-target="#modalAdvancedSearch">
              <svg class="tt-icon">
                <use xlink:href="#icon-search"></use>
              </svg>
            </button>
            <!-- /toggle -->
            <form class="search-wrapper">
              <div class="search-form">
                <input type="text" class="tt-search__input" placeholder="Search">
                <button class="tt-search__btn" type="submit">
                  <svg class="tt-icon">
                    <use xlink:href="#icon-search"></use>
                  </svg>
                </button>
                <button class="tt-search__close">
                  <svg class="tt-icon">
                    <use xlink:href="#cancel"></use>
                  </svg>
                </button>
              </div>
              <div class="search-results">
                <div class="tt-search-scroll">
                  <ul>
                    <li>
                      <a href="page-single-topic.html">
                        <h6 class="tt-title">Rdr2 secret easter eggs</h6>
                        <div class="tt-description">
                          Here’s what I’ve found in Red Dead Redem..
                        </div>
                      </a>
                    </li>
                    <li>
                      <a href="page-single-topic.html">
                        <h6 class="tt-title">Top 10 easter eggs in Red Dead Rede..</h6>
                        <div class="tt-description">
                          You can find these easter eggs in Red Dea..
                        </div>
                      </a>
                    </li>
                    <li>
                      <a href="page-single-topic.html">
                        <h6 class="tt-title">Red Dead Redemtion: Arthur Morgan..</h6>
                        <div class="tt-description">
                          Here’s what I’ve found in Red Dead Redem..
                        </div>
                      </a>
                    </li>

                  </ul>
                </div>
                <button type="button" class="tt-view-all" data-toggle="modal" data-target="#modalAdvancedSearch">Advanced Search</button>
              </div>
            </form>
          </div>
          <!-- /tt-search -->
        </div>

        <!-- Conditional Rendering of Login And Dashboard -->
        <% if(!user){ %>
          <div class="col-auto ml-auto">
            <div class="tt-account-btn">
              <a href="/login" class="btn btn-primary">Log in</a>
              <a href="/register" class="btn btn-secondary">Sign up</a>
            </div>
          </div>
          <% } else{ %>
            <div class="col-auto ml-auto">
              <div class="tt-user-info d-flex justify-content-center">
                <a href="#" class="tt-btn-icon">
                  <i class="tt-icon"><svg>
                      <use xlink:href="#icon-notification"></use>
                    </svg></i>
                </a>
                <div class="tt-avatar-icon tt-size-md">
                  <% var authName=user.name %>
                    <% const nameIcon=authName.charAt(0).toLowerCase(); %>
                      <i class="tt-icon"><svg>
                          <use xlink:href="#icon-ava-<%= nameIcon %>"></use>
                        </svg></i>
                </div>
                <div class="custom-select-01">

                  <select id="account-menu" onChange="window.location.href=this.value">
                    <option value="" selected="selected">

                      <%var name=user.name.split(' ')[0] %>
                                              <%= name %>
                                        </option>
                                        <option value="http://localhost:3000/dashboard">
                                          Dashbaord
                                          </option>
                                        <option value="http://localhost:3000/logout">
                                          Logout
                                          </option>
                                  
                                      </select>
                  
                </div>
              </div>
            </div>
            <% } %>

              <!-- Conditional Rendering of Login And Dashboard -->
      </div>
    </div>
  </header>
